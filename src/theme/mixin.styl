@import './variables.styl'

get_background($color)
  //默认样式（任意选择一个主题即可注意要和下面的默认主题一致）
  background: darkMode[$color];
  for item in themeList
    //判断html的data-theme的属性值，{}是Stylus插值
    [data-theme = {item.name}] & {
      //这里的item可以当作一个对象，item[$color]可表示为：对象名.属性
      background: item[$color];
    }


get_font_color($color)
  color: darkMode[$color];
  for item in themeList
    [data-theme = {item.name}] & {
      color: item[$color];
    }

get_border_color($color)
  border-color: darkMode[$color];

  for item in themeList
    [data-theme = {item.name}] & {
      border-color: item[$color];
    }

get_background_image($name)
  background-image: darkMode[$name];

  for item in themeList
    [data-theme = {item.name}] & {
      background-image: item[$name];
    }

._input{
  font-size .8rem;
  get_background(input_background)
  get_font_color(font_color)
  border-radius 8px
  padding-left: 0.6rem
  border: none
}
._button{
  text-align center;
  background-color: #FDA45E;
  border-radius 8px
  width: 75%
  height: 2rem
  line-height @height;
  margin: 0 auto;
  get_font_color(font_color)
  font-size .8rem;
}
._select{
  font-size .8rem;
  border-radius 8px
  width 100%
  height: 2rem
  border: none
  padding-left: 0.6rem
  get_background(select_background)
  get_font_color(font_color)
  appearance: none;
}

.__message-content{
  get_font_color(font_color)
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 0;
  right: 0;
  margin: 0 auto;
  min-width: 10rem;
  width: fit-content;
  padding: .5rem 1rem 0;
  height: 2rem;
  background: rgba(87, 87, 87, 0.8);
  border-radius: 4px;
  z-index: 3000;
  opacity: 0;
  text-align: center;
  font-size: 1rem;
}

.__confirm-shadow{
  position absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  background: rgba(0, 0, 0, 0.5)
  z-index: 3000;
  get_font_color(font_color)
  .__confirm-wrap {
    position absolute
    top: 50%
    left: 0
    right: 0
    margin: 0 auto;
    transform: translateY(-60%);
    border-radius 8px;
    width: 12rem
    background: #2D2D2D;
    text-align center
    display flex
    flex-direction column
    font-size .8rem
    .__confirm-content{
      padding: 2rem 1rem
      flex: 1;
    }
    .__confirm-button-wrap{
      display flex
      border-top: 1px solid #1C1D1E
      .__confirm-ok{
        flex: 1;
        padding: 1rem 0;
        border-right:  1px solid #1C1D1E
        color: #FDA45E;
      }
      .__confirm-cancel{
        flex: 1;
        padding: 1rem 0;
      }
    }
    .__confirm-close{
      position absolute
      top: .5rem
      right: .75rem
      width: .5rem
      height @width
    }
  }
}
